@page "/all-subCategory"
@model GoodsEnterprise.Web.Pages.SubCategoryModel

@{ ViewData["Title"] = "SubCategory";
                var Edit = "";
                var List = "";

                if (Convert.ToString(ViewData["PageType"]) == "Edit")
                {
                    Edit = "display:block;";
                    List = "display:none;";
                }
                else
                {
                    Edit = "display:none;";
                    List = "display:block;";
                } }

<link href="/css/common.css" rel="stylesheet" asp-append-version="true" />

<style>
    /* DataTables styling */
    .dataTables_length select,
    .dataTables_filter input {
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.375rem 0.75rem;
        font-size: 14px;
        color: #374151;
        transition: all 0.2s ease;
    }

    .dataTables_length select:hover,
    .dataTables_filter input:hover {
        border-color: #9ca3af;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .dataTables_length select:focus,
    .dataTables_filter input:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }

        .d-flex.align-items-center.gap-3 {
            flex-wrap: wrap;
            justify-content: center;
        }

        .dataTables_filter input {
            width: 150px;
        }
    }

    /* Pagination styling */
    #tblSubCategoryMaster_wrapper .dataTables_paginate {
        margin: 0 !important;
        display: flex !important;
        justify-content: flex-end !important;
        align-items: center !important;
        flex-wrap: wrap !important;
    }

    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button {
        background: #fff !important;
        border: 1px solid #d1d5db !important;
        border-radius: 6px !important;
        padding: 0 !important;
        margin: 0 2px !important;
        font-size: 14px !important;
        color: #374151 !important;
        cursor: pointer !important;
        transition: all 0.2s ease !important;
        text-decoration: none !important;
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        min-width: 36px !important;
        height: 36px !important;
    }

    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button:hover {
        background: #f3f4f6 !important;
        border-color: #9ca3af !important;
        color: #111827 !important;
        transform: translateY(-1px) !important;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;
    }

    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.current,
    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.current:hover {
        background: #3b82f6 !important;
        border-color: #3b82f6 !important;
        color: #fff !important;
        font-weight: 600 !important;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }

    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.disabled,
    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.disabled:hover {
        background: #f9fafb !important;
        border-color: #e5e7eb !important;
        color: #9ca3af !important;
        cursor: not-allowed !important;
        opacity: 0.6 !important;
    }

    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.previous,
    #tblSubCategoryMaster_wrapper .dataTables_paginate .paginate_button.next {
        font-weight: 500 !important;
    }

    /* Info styling */
    #tblSubCategoryMaster_wrapper .dataTables_info {
        margin-top: 1rem;
        font-size: 14px;
        color: #6b7280;
        text-align: left;
    }

    /* Table wrapper to fit window */
    .modern-table-container {
        width: 100%;
        overflow-x: auto;
        margin-bottom: 0;
        margin-top: 0;
        padding-top: 0;
        height: calc(100vh - 200px);
    }

    .modern-table {
        width: 100% !important;
        table-layout: auto;
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    /* Remove top spacing from table wrapper and DataTable elements */
    #tblSubCategoryMaster_wrapper {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    #tblSubCategoryMaster {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    /* Ensure pagination row is visible */
    #tblSubCategoryMaster_wrapper .row {
        margin: 1rem 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    #tblSubCategoryMaster_wrapper .row .col-md-5 {
        flex: 0 0 auto;
    }

    #tblSubCategoryMaster_wrapper .row .col-md-7 {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }

    /* Responsive table adjustments */
    @@media (max-width: 768px) {
        #tblSubCategoryMaster_wrapper .row {
            flex-direction: column;
            gap: 1rem;
        }

        #tblSubCategoryMaster_wrapper .row .col-md-7 {
            justify-content: center;
        }

        .modern-table-container {
            font-size: 14px;
        }
    }

    /* Column alignment and sizing */
    #tblSubCategoryMaster th:nth-child(3),
    #tblSubCategoryMaster td:nth-child(3) {
        text-align: center !important;
    }

    #tblSubCategoryMaster th:nth-child(4),
    #tblSubCategoryMaster td:nth-child(4) {
        text-align: center !important;
    }

    /* Column width adjustments */
    #tblSubCategoryMaster th:nth-child(1),
    #tblSubCategoryMaster td:nth-child(1) {
        width: 35%;
        min-width: 150px;
    }

    #tblSubCategoryMaster th:nth-child(2),
    #tblSubCategoryMaster td:nth-child(2) {
        width: 50%;
        min-width: 200px;
    }

    #tblSubCategoryMaster th:nth-child(3),
    #tblSubCategoryMaster td:nth-child(3) {
        width: 10%;
        min-width: 80px;
    }

    #tblSubCategoryMaster th:nth-child(4),
    #tblSubCategoryMaster td:nth-child(4) {
        width: 5%;
        min-width: 60px;
        text-align: center !important;
    }

    /* No text wrapping for all columns */
    #tblSubCategoryMaster th,
    #tblSubCategoryMaster td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Center align action buttons */
    #tblSubCategoryMaster .modern-btn-group {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.25rem;
    }

    /* Force center alignment for status badges */
    #tblSubCategoryMaster td:nth-child(3) .modern-badge {
        display: inline-block;
        margin: 0 auto;
    }

    /* Ensure status cell content is centered */
    #tblSubCategoryMaster td:nth-child(3) {
        text-align: center !important;
        vertical-align: middle !important;
    }

    /* Override any inherited alignment */
    #tblSubCategoryMaster th:nth-child(3) {
        text-align: center !important;
    }
</style>

<div class="modern-alert modern-alert-success" id="success-alert" style="display:none;">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
    <span>@ViewData["SuccessMsg"]</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div id="subCategorylist" style="@List">
    <div class="modern-card">
        <!-- Header section with all controls in same horizontal line -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-3">
            <div class="d-flex align-items-center flex-wrap" style="gap: 3rem;">
                <!-- Search input - moved to first position -->
                <div class="dataTables_filter" id="tblSubCategoryMaster_filter">
                    <label class="d-flex align-items-center gap-2">
                        <span>Search:</span>
                        <input type="search" class="modern-search-input" placeholder="Type to search subcategories..." aria-controls="tblSubCategoryMaster" style="width: 200px;" id="subCategorySearchInput">
                    </label>
                </div>
                
                <!-- Show entries dropdown - moved to second position -->
                <div class="dataTables_length" id="tblSubCategoryMaster_length">
                    <label class="d-flex align-items-center gap-2">
                        <span>Show</span>
                        <select name="tblSubCategoryMaster_length" aria-controls="tblSubCategoryMaster" class="modern-form-input" style="width: auto; padding: 0.375rem 0.75rem;" id="subCategoryLengthSelect">
                            <option value="5">5</option>
                            <option value="10" selected>10</option>
                            <option value="20">20</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <span>entries</span>
                    </label>
                </div>
            </div>
            
            <!-- Create button with only icon -->
            <a id="lnkCreateSubCategory" class="modern-btn modern-btn-primary" title="Create SubCategory">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>
        <div class="modern-table-container">
            <table class="modern-table" id="tblSubCategoryMaster">
                <thead>
                    <tr>
                        <th scope="col">SubCategory Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstsubCategory)
                    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <span class="modern-badge @(item.IsActive ? "modern-badge-success" : "modern-badge-secondary")">
                    @(item.IsActive ? "Active" : "Inactive")
                </span>
            </td>
            <td>
                <div class="modern-btn-group">
                    <a asp-page-handler="Edit" asp-route-subCategoryId="@item.Id" class="modern-btn modern-btn-sm modern-btn-primary">
                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                        </svg>
                    </a>
                    <a asp-page-handler="DeleteSubCategory" asp-route-subCategoryId="@item.Id" class="modern-btn modern-btn-sm modern-btn-danger btn-subCategory-delete">
                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>



<div id="divCreateUpdateSubCategory" style="@Edit">
    <div class="modern-card">
        <form method="post" enctype="multipart/form-data" asp-page-handler="Submit">
            <div asp-validation-summary="ModelOnly" class="modern-alert modern-alert-error"></div>
            @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
            {
<input asp-for="objSubCategory.Id" type="hidden" class="form-control" id="txtSubCategoryID">
                <input asp-for="objSubCategory.IsDelete" type="hidden" class="form-control" id="txtIsDelete">
                                <input asp-for="objSubCategory.Createdby" type="hidden" class="form-control" id="txtCreatedby">
                                                <input asp-for="objSubCategory.CreatedDate" type="hidden" class="form-control" id="txtCreatedDate">
                                                                <input asp-for="objSubCategory.Modifiedby" type="hidden" class="form-control" id="txtModifiedby">
                                                                                <input asp-for="objSubCategory.ModifiedDate" type="hidden" class="form-control" id="txtModifiedDate">}

            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtSubCategory" class="modern-form-label">SubCategory Name *</label>
                        <input asp-for="objSubCategory.Name" type="text" class="modern-form-input" id="txtSubCategory" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Status</label>
                        <div class="modern-toggle-container">
                            <input asp-for="objSubCategory.IsActive" type="checkbox" id="txtIsActive" class="modern-checkbox">
                            <label for="txtIsActive" class="modern-toggle-label">
                                <div class="toggle-switch">
                                    <div class="toggle-slider"></div>
                                    <span class="toggle-text-off">Inactive</span>
                                    <span class="toggle-text-on">Active</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtDescription" class="modern-form-label">Description</label>
                        <textarea asp-for="objSubCategory.Description" class="modern-form-input" id="txtDescription" rows="3"></textarea>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="modern-form-actions d-flex justify-content-end gap-2">
                        <button type="submit" class="modern-btn modern-btn-primary subCategory-submit">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            @(Convert.ToInt32(ViewData["PagePrimaryID"]) > 0 ? "Update SubCategory" : "Create SubCategory")
                        </button>
                        @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
                        {
                            <a asp-page-handler="Reset" asp-route-subCategoryId=@Convert.ToInt32(ViewData["PagePrimaryID"]) class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
                                </svg>
                                Reset
                            </a> }
                                        else
                                        {
                            <a asp-page-handler="Clear" class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                Clear
                            </a>}
                        <a asp-page="/SubCategory" class="modern-btn modern-btn-secondary">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            Close
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* Include Modern Alert System *@
@await Html.PartialAsync("_ModernAlerts")

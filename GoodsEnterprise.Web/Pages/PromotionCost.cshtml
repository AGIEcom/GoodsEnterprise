<script>
    // Initialize Promotion Cost Import functionality using supplier import pattern
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize promotion cost import modal functionality
        const btnImportPromotionCosts = document.getElementById('btnImportPromotionCosts');
        const importModal = document.getElementById('importModal');
        const closeImportModal = document.getElementById('closeImportModal');
        const cancelImport = document.getElementById('cancelImport');

        // Show import modal
        if (btnImportPromotionCosts) {
            btnImportPromotionCosts.addEventListener('click', function () {
                importModal.style.display = 'block';
                document.body.style.overflow = 'hidden';

                // Initialize promotion cost import configuration
                if (typeof window.GenericImportConfig !== 'undefined') {
                    // Create new instance with promotion cost configuration
                    window.promotionCostImportConfig = new window.GenericImportConfig(
                        '/config/promotioncost-import-columns.json',
                        'PromotionCost'
                    );
                }
            });
        }

        // Hide import modal
        function hideModal() {
            importModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        if (closeImportModal) {
            closeImportModal.addEventListener('click', hideModal);
        }

        if (cancelImport) {
            cancelImport.addEventListener('click', hideModal);
        }

        // Close modal when clicking outside
        importModal.addEventListener('click', function (e) {
            if (e.target === importModal) {
                hideModal();
            }
        });

        console.log('Promotion Cost import modal initialized successfully');
    });
</script>
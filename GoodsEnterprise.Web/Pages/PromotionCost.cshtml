<style>
    .selected-file-name {
        margin-top: 10px;
        padding: 8px 12px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 14px;
    }

    .file-name-text {
        color: #495057;
        font-weight: 500;
    }

    .remove-file-btn {
        background: none;
        border: none;
        color: #dc3545;
        font-size: 18px;
        cursor: pointer;
        padding: 0;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .remove-file-btn:hover {
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
        }

    /* Custom styles for DataTables length menu */
    #promotion-cost-length-menu-placeholder .dataTables_length {
        padding-left: 10px; /* Add some space next to the clear button */
    }

        #promotion-cost-length-menu-placeholder .dataTables_length label {
            display: flex;
            align-items: center;
            margin-bottom: 0; /* Remove default bottom margin from label */
            white-space: nowrap; /* Prevent wrapping */
        }

        #promotion-cost-length-menu-placeholder .dataTables_length select {
            margin: 0 8px; /* Add space around the select dropdown */
        }

    .datatable-header-controls {
        padding: 0 !important;
        margin: 0 0 1rem 0 !important; /* Remove padding, but keep a bottom margin for spacing */
    }

    #tblSupplierMaster_wrapper.dataTables_wrapper {
        padding: 0 !important;
    }

    /* Action buttons styling */
    .action-buttons {
        display: flex !important;
        align-items: center;
        justify-content: center;
        gap: 4px !important;
    }

        .action-buttons .modern-btn {
            padding: 4px 8px !important;
            font-size: 12px !important;
            min-width: auto !important;
            line-height: 1.2 !important;
        }

            .action-buttons .modern-btn svg {
                width: 14px !important;
                height: 14px !important;
            }

    /* Table column width adjustments - removed fixed widths to allow auto-adjustment */
    #tblPromotionCost {
        width: 100%;
    }

        /* Specific column width controls */
        #tblPromotionCost th:nth-child(2), /* SKU Code - reduced to half */
        #tblPromotionCost td:nth-child(2) {
            width: 8% !important; /* Reduced to half */
        }

        #tblPromotionCost th:nth-child(4), /* Description - increased */
        #tblPromotionCost td:nth-child(4) {
            width: 40% !important; /* Increased for more space */
        }

        /* Removed fixed column widths to allow DataTable auto-sizing */
        /* #tblPromotionCost th:nth-child(1), #tblPromotionCost td:nth-child(1) { width: 20% !important; } */
        /* #tblPromotionCost th:nth-child(3), #tblPromotionCost td:nth-child(3) { width: 18% !important; } */
        /* #tblPromotionCost th:nth-child(5), #tblPromotionCost td:nth-child(5) { width: 10% !important; } */
        /* #tblPromotionCost th:nth-child(6), #tblPromotionCost td:nth-child(6) { width: 5% !important; } */

        /* Ensure description text shows in one line */
        #tblPromotionCost td:nth-child(4) {
            white-space: nowrap !important;
            overflow: hidden !important;
            text-overflow: ellipsis !important;
            max-width: 0 !important; /* This helps with ellipsis */
        }

    /* Make sure table doesn't exceed container */
    #tblSupplierMaster_wrapper .dataTables_scrollBody {
        overflow-x: auto !important;
    }

    /* Style Show entries dropdown to match Filter by dropdown */
    #promotion-cost-length-menu-placeholder .dataTables_length select {
        /* Apply same styling as modern-select-enhanced */
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 8px 12px !important;
        font-size: 14px;
        color: #374151;
        min-width: 80px;
        height: 40px !important;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        #promotion-cost-length-menu-placeholder .dataTables_length select:hover {
            border-color: #9ca3af;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

        #promotion-cost-length-menu-placeholder .dataTables_length select:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

    /* Style the label to match filter-label */
    #promotion-cost-length-menu-placeholder .dataTables_length label {
        font-size: 14px;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0;
        margin-right: 8px;
        display: inline-flex;
        align-items: center;
    }

    /* Column resizing functionality */
    #tblPromotionCost {
        border-collapse: separate;
    }

        #tblPromotionCost th {
            position: relative;
            user-select: none;
        }

            /* Add resize handles to table headers */
            #tblPromotionCost th:not(:last-child)::after {
                content: '';
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                cursor: col-resize;
                background: linear-gradient(to bottom, transparent, #ddd, transparent);
                opacity: 0;
                transition: opacity 0.2s;
            }

            #tblPromotionCost th:not(:last-child):hover::after {
                opacity: 1;
            }

            /* Right-align all table headers except Actions */
            #tblPromotionCost th:nth-child(1),
            #tblPromotionCost th:nth-child(2),
            #tblPromotionCost th:nth-child(3),
            #tblPromotionCost th:nth-child(4),
            #tblPromotionCost th:nth-child(5) {
                text-align: left !important;
            }

            /* Keep Actions column header centered */
            #tblPromotionCost th:nth-child(6) {
                text-align: center !important;
            }

        /* Right-align table data cells for consistency */
        #tblPromotionCost td:nth-child(1),
        #tblPromotionCost td:nth-child(2),
        #tblPromotionCost td:nth-child(3),
        #tblPromotionCost td:nth-child(4),
        #tblPromotionCost td:nth-child(5) {
            text-align: left !important;
        }

        /* Keep Actions column data centered */
        #tblPromotionCost td:nth-child(6) {
            text-align: center !important;
        }

    /* Custom Pagination Styling */
    #tblSupplierMaster_wrapper .dataTables_paginate {
        margin-top: 1rem !important;
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
    }

        #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button {
            background: #fff !important;
            border: 1px solid #d1d5db !important;
            border-radius: 6px !important;
            padding: 0 !important;
            margin: 0 2px !important;
            font-size: 14px !important;
            color: #374151 !important;
            cursor: pointer !important;
            transition: all 0.2s ease !important;
            text-decoration: none !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            min-width: 36px !important;
            height: 36px !important;
        }

            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button:hover {
                background: #f3f4f6 !important;
                border-color: #9ca3af !important;
                color: #111827 !important;
                transform: translateY(-1px) !important;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;
            }

            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.current,
            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.current:hover {
                background: #3b82f6 !important;
                border-color: #3b82f6 !important;
                color: #fff !important;
                font-weight: 600 !important;
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
            }

            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.disabled,
            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.disabled:hover {
                background: #f9fafb !important;
                border-color: #e5e7eb !important;
                color: #9ca3af !important;
                cursor: not-allowed !important;
                opacity: 0.6 !important;
            }

            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.previous,
            #tblSupplierMaster_wrapper .dataTables_paginate .paginate_button.next {
                font-weight: 500 !important;
            }

    /* Pagination info text */
    #tblSupplierMaster_wrapper .dataTables_info {
        color: #6b7280 !important;
        font-size: 14px !important;
        margin-top: 1rem !important;
        text-align: center !important;
    }

</style>


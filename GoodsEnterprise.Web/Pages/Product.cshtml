                        <div class="datepicker-wrapper">
                            <input asp-for="objProduct.ExpriyDate" type="date" class="modern-form-input datepicker" id="txtExpriyDate" 
                                   value="@(Model.objProduct?.ExpriyDate?.ToString("yyyy-MM-dd") ?? string.Empty)">
                        </div>

<script>
    function clearSelectedFile() {
        var fileInput = document.getElementById('fileUpload');
        var selectedFileName = document.getElementById('selectedFileName');
        
        fileInput.value = '';
        selectedFileName.style.display = 'none';
    }

    function preventZero(event) {
        // Allow numbers 1-9 (charCode 49-57), backspace (8), delete (46), tab (9), arrow keys, etc.
        // Prevent zero (charCode 48)
        if (event.charCode === 48) {
            return false;
        }
        // Allow other numeric characters and control keys
        return (event.charCode >= 49 && event.charCode <= 57) || event.charCode === 0;
    }

    function validateShelfLife(input) {
        // Remove any leading zeros and ensure value is not 0
        let value = input.value;
        
        // Remove leading zeros
        value = value.replace(/^0+/, '');
        

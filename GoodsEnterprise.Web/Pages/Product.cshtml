                <input asp-for="objProduct.IsDelete" type="hidden" class="form-control" id="txtIsDelete">
                <input asp-for="objProduct.Createdby" type="hidden" class="form-control" id="txtCreatedby">
                <input asp-for="objProduct.CreatedDate" type="hidden" class="form-control" id="txtCreatedDate">
                <input asp-for="objProduct.Modifiedby" type="hidden" class="form-control" id="txtModifiedby">
                <input asp-for="objProduct.ModifiedDate" type="hidden" class="form-control" id="txtModifiedDate">
            }
            <div class="row">
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProduct" class="modern-form-label">Brandowner Code *</label>
                        <input asp-for="objProduct.Code" type="text" class="modern-form-input" id="txtProduct" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProductID" class="modern-form-label">Lavender Code</label>
                        <input asp-for="objProduct.Id" type="text" class="modern-form-input" id="txtProductID" readonly>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProductName" class="modern-form-label">Product Name *</label>
                        <input asp-for="objProduct.ProductName" type="text" class="modern-form-input" id="txtProductName" required>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProductDescription" class="modern-form-label">Product Description</label>
                        <textarea asp-for="objProduct.ProductDescription" class="modern-form-input" id="txtProductDescription" rows="2"></textarea>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProductSeebelow" class="modern-form-label">See Below</label>
                        <textarea asp-for="objProduct.Seebelow" class="modern-form-input" id="txtProductSeebelow" rows="2"></textarea>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="txtProductSeebelow1" class="modern-form-label">See Below1</label>
                        <textarea asp-for="objProduct.Seebelow1" class="modern-form-input" id="txtProductSeebelow1" rows="2"></textarea>
                    </div>
                </div>

            </div>
            <div class="row">

        }

    /* Custom styles for DataTables length menu */
    #product-length-menu-placeholder .dataTables_length {
        padding-left: 10px; /* Add some space next to the clear button */
    }

        #product-length-menu-placeholder .dataTables_length label {
            display: flex;
            align-items: center;
            margin-bottom: 0; /* Remove default bottom margin from label */
            white-space: nowrap; /* Prevent wrapping */
        }

        #product-length-menu-placeholder .dataTables_length select {
            margin: 0 8px; /* Add space around the select dropdown */
        }

    .datatable-header-controls {
        padding: 0 !important;
        margin: 0 0 1rem 0 !important; /* Remove padding, but keep a bottom margin for spacing */
    }

    #tblProductMaster_wrapper.dataTables_wrapper {
        padding: 0 !important;
    }

    /* Action buttons styling */
    .action-buttons {
        display: flex !important;
        align-items: center;
        justify-content: center;
        gap: 4px !important;
    }

        .action-buttons .modern-btn {
            padding: 4px 8px !important;
            font-size: 12px !important;
            min-width: auto !important;
            line-height: 1.2 !important;
        }

            .action-buttons .modern-btn svg {
                width: 14px !important;
                height: 14px !important;
            }

    /* Table column width adjustments - removed fixed widths to allow auto-adjustment */
    #tblProductMaster {
        width: 100%;
    }

        /* Specific column width controls */
        #tblProductMaster th:nth-child(2), /* SKU Code - reduced to half */
        #tblProductMaster td:nth-child(2) {
            width: 8% !important; /* Reduced to half */
        }

        #tblProductMaster th:nth-child(4), /* Description - increased */
        #tblProductMaster td:nth-child(4) {
            width: 40% !important; /* Increased for more space */
        }


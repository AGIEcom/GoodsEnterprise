    function clearSelectedFile() {
        var fileInput = document.getElementById('fileUpload');
        var selectedFileName = document.getElementById('selectedFileName');

        fileInput.value = '';
        selectedFileName.style.display = 'none';
    }

    function preventZero(event) {
        // Allow numbers 1-9 (charCode 49-57), backspace (8), delete (46), tab (9), arrow keys, etc.
        // Prevent zero (charCode 48)
        if (event.charCode === 48) {
            return false;
        }
        // Allow other numeric characters and control keys
        return (event.charCode >= 49 && event.charCode <= 57) || event.charCode === 0;
    }

    function validateShelfLife(input) {
        // Remove any leading zeros and ensure value is not 0
        let value = input.value;

        // Remove leading zeros
        value = value.replace(/^0+/, '');

        // If empty after removing zeros, set to empty
        if (value === '') {
            input.value = '';
            return;
        }

        // Convert to number and check if it's 0
        let numValue = parseInt(value);
        if (numValue === 0 || isNaN(numValue)) {
            input.value = '';
            return;
        }

        // Update the input value without leading zeros
        input.value = numValue.toString();
    }

    function handleShelfLifePaste(event) {
        // Prevent default paste behavior
        event.preventDefault();

        // Get pasted data
        let pastedData = (event.clipboardData || window.clipboardData).getData('text');

        // Remove non-numeric characters except for the first character
        pastedData = pastedData.replace(/[^0-9]/g, '');

        // Remove leading zeros
        pastedData = pastedData.replace(/^0+/, '');

        // If empty after cleaning, don't paste anything
        if (pastedData === '') {
            return;
        }

        // Convert to number and validate
        let numValue = parseInt(pastedData);
        if (numValue > 0 && !isNaN(numValue)) {
            event.target.value = numValue.toString();
        }
    }
</script>



<script>
    // Initialize Product Import functionality using supplier import pattern
    document.addEventListener('DOMContentLoaded', function () {
        
        // Initialize product import modal functionality
        const btnImportProducts = document.getElementById('btnImportProducts');
        const importModal = document.getElementById('importModal');
        const closeImportModal = document.getElementById('closeImportModal');
        const cancelImport = document.getElementById('cancelImport');
        debugger;
        // Show import modal
        if (btnImportProducts) {
            btnImportProducts.addEventListener('click', function () {
                importModal.style.display = 'block';
                document.body.style.overflow = 'hidden';
                // Initialize product import configuration
                if (typeof window.GenericImportConfig !== 'undefined') {
                    // Create new instance with product configuration
                    window.productImportConfig = new window.GenericImportConfig(
                        '/config/product-import-columns.json',
                        'Product'
                    );

                    // Wait for configuration to load, then initialize simple accordion behavior
                    setTimeout(() => {
                        initializeSimpleAccordion();
                    }, 1000);
                }
            });
        }

        // Hide import modal
        function hideModal() {
            importModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        if (closeImportModal) {
            closeImportModal.addEventListener('click', hideModal);
        }

        if (cancelImport) {
            cancelImport.addEventListener('click', hideModal);
        }

        // Close modal when clicking outside
        importModal.addEventListener('click', function (e) {
            if (e.target === importModal) {
                hideModal();
            }
        });

        // Simple accordion initialization function
        function initializeSimpleAccordion() {
            const accordionButton = document.querySelector('#expectedColumnsHeaderP .accordion-button');
            const accordionCollapse = document.getElementById('expectedColumnsCollapseP');

            if (accordionButton && accordionCollapse) {
                // Remove any existing event listeners
                accordionButton.replaceWith(accordionButton.cloneNode(true));
                const newButton = document.querySelector('#expectedColumnsHeaderP .accordion-button');

                newButton.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const isExpanded = newButton.getAttribute('aria-expanded') === 'true';

                    if (isExpanded) {
                        // Collapse
                        accordionCollapse.style.transition = 'all 0.3s ease';
                        accordionCollapse.classList.remove('show');
                        newButton.setAttribute('aria-expanded', 'false');
                        newButton.classList.add('collapsed');
                    } else {
                        // Expand
                        accordionCollapse.style.transition = 'all 0.3s ease';
                        accordionCollapse.classList.add('show');
                        newButton.setAttribute('aria-expanded', 'true');
                        newButton.classList.remove('collapsed');
                    }
                });

                console.log('Simple accordion initialized');
            }
        }

        console.log('Product import modal initialized successfully');
    });
</script>

                        <select asp-for="objProduct.BrandId" class="modern-select" asp-items="Model.selectBrands" id="selectProductBrand" required>
                            <option value="">-- Select Brand --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="selectProductCategory" class="modern-form-label">Category *</label>
                        <select asp-for="objProduct.CategoryId" class="modern-select" asp-items="Model.selectCategories" id="selectProductCategory" required>
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="selectProductSubCategory" class="modern-form-label">SubCategory</label>
                        <select asp-for="objProduct.SubCategoryId" class="modern-select" asp-items="Model.selectSubCategories" id="selectProductSubCategory">
                            <option value="">-- Select SubCategory --</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="modern-form-group">
                        <label for="selectProductSubCategory" class="modern-form-label">Supplier</label>
                        <select asp-for="objProduct.SupplierId" class="modern-select" asp-items="Model.selectSupplier" id="selectProductSupplier">
                            <option value="">-- Select Supplier --</option>
                        </select>                       

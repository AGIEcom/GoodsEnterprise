    #product-length-menu-placeholder .dataTables_length label {
        font-size: 14px;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0;
        margin-right: 8px;
        display: inline-flex;
        align-items: center;
    }

    /* Column resizing functionality */
    #tblProductMaster {
        border-collapse: separate;
    }

        #tblProductMaster th {
            position: relative;
            user-select: none;
        }

            /* Add resize handles to table headers */
            #tblProductMaster th:not(:last-child)::after {
                content: '';
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                cursor: col-resize;
                background: linear-gradient(to bottom, transparent, #ddd, transparent);
                opacity: 0;
                transition: opacity 0.2s;
            }

            #tblProductMaster th:not(:last-child):hover::after {
                opacity: 1;
            }

            /* Right-align all table headers except Actions */
            #tblProductMaster th:nth-child(1),
            #tblProductMaster th:nth-child(2),
            #tblProductMaster th:nth-child(3),
            #tblProductMaster th:nth-child(4),
            #tblProductMaster th:nth-child(5) {
                text-align: left !important;
            }

            /* Keep Actions column header centered */
            #tblProductMaster th:nth-child(6) {
                text-align: center !important;
            }

        /* Right-align table data cells for consistency */
        #tblProductMaster td:nth-child(1),
        #tblProductMaster td:nth-child(2),
        #tblProductMaster td:nth-child(3),
        #tblProductMaster td:nth-child(4),
        #tblProductMaster td:nth-child(5) {
            text-align: left !important;
        }

        /* Keep Actions column data centered */
        #tblProductMaster td:nth-child(6) {
            text-align: center !important;
        }

    /* Custom Pagination Styling */
    #tblProductMaster_wrapper .dataTables_paginate {
        margin-top: 1rem !important;
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
    }

        #tblProductMaster_wrapper .dataTables_paginate .paginate_button {
            background: #fff !important;
            border: 1px solid #d1d5db !important;
            border-radius: 6px !important;
            padding: 0 !important;
            margin: 0 2px !important;
            font-size: 14px !important;
            color: #374151 !important;
            cursor: pointer !important;
            transition: all 0.2s ease !important;
            text-decoration: none !important;
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            min-width: 36px !important;
            height: 36px !important;
        }

            #tblProductMaster_wrapper .dataTables_paginate .paginate_button:hover {
                background: #f3f4f6 !important;
                border-color: #9ca3af !important;
                color: #111827 !important;
                transform: translateY(-1px) !important;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;
            }

            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.current,
            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.current:hover {
                background: #3b82f6 !important;
                border-color: #3b82f6 !important;
                color: #fff !important;
                font-weight: 600 !important;
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
            }

            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.disabled,
            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.disabled:hover {
                background: #f9fafb !important;
                border-color: #e5e7eb !important;
                color: #9ca3af !important;
                cursor: not-allowed !important;
                opacity: 0.6 !important;
            }

            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.previous,
            #tblProductMaster_wrapper .dataTables_paginate .paginate_button.next {
                font-weight: 500 !important;
            }

    /* Pagination info text */
    #tblProductMaster_wrapper .dataTables_info {
        color: #6b7280 !important;
        font-size: 14px !important;
        margin-top: 1rem !important;
        text-align: center !important;
    }
</style>


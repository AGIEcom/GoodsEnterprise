        /* #tblProductMaster th:nth-child(1), #tblProductMaster td:nth-child(1) { width: 20% !important; } */
        /* #tblProductMaster th:nth-child(3), #tblProductMaster td:nth-child(3) { width: 18% !important; } */
        /* #tblProductMaster th:nth-child(5), #tblProductMaster td:nth-child(5) { width: 10% !important; } */
        /* #tblProductMaster th:nth-child(6), #tblProductMaster td:nth-child(6) { width: 5% !important; } */

        /* Ensure description text shows in one line */
        #tblProductMaster td:nth-child(4) {
            white-space: nowrap !important;
            overflow: hidden !important;
            text-overflow: ellipsis !important;
            max-width: 0 !important; /* This helps with ellipsis */
        }

    /* Make sure table doesn't exceed container */
    #tblProductMaster_wrapper .dataTables_scrollBody {
        overflow-x: auto !important;
    }

    /* Style Show entries dropdown to match Filter by dropdown */
    #product-length-menu-placeholder .dataTables_length select {
        /* Apply same styling as modern-select-enhanced */
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 8px 12px !important;
        font-size: 14px;
        color: #374151;
        min-width: 80px;
        height: 40px !important;
        cursor: pointer;
        transition: all 0.2s ease;
    }


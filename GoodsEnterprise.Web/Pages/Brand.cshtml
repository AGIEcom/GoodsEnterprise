@page "/all-brand"
@model GoodsEnterprise.Web.Pages.BrandModel

@{
    ViewData["Title"] = "Brand";
    var Edit = "";
    var List = "";

    if (Convert.ToString(ViewData["PageType"]) == "Edit")
    {
        Edit = "display:block;";
        List = "display:none;";
    }
    else
    {
        Edit = "display:none;";
        List = "display:block;";
    }

    var imagePath = "";
    if (ViewData["ImagePath"] != null)
    {
        imagePath = Convert.ToString(ViewData["ImagePath"]);

    }
}

<div class="modern-alert modern-alert-success" id="success-alert" style="display:none;">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
    <span>@ViewData["SuccessMsg"]</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div id="brandlist" style="@List">
    <div class="modern-card">
        <div class="modern-card-header">
            <h2 class="modern-card-title">Brand Management</h2>
        </div>
        <a id="lnkCreateBrand" class="modern-btn modern-btn-primary mb-3">
            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
            </svg>
            Create New Brand
        </a>
        <div class="modern-table-container" style="max-height: 600px; overflow-y: auto;">
            <table class="modern-table" id="tblBrandMaster">
                <thead>
                    <tr>
                        <th scope="col">Brand Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstbrand)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <span class="modern-badge @(item.IsActive ? "modern-badge-success" : "modern-badge-secondary")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="modern-btn-group">
                                    <a asp-page-handler="Edit" asp-route-brandId="@item.Id" class="modern-btn modern-btn-sm modern-btn-primary">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                        </svg>
                                        Edit
                                    </a>
                                    <a asp-page-handler="DeleteBrand" asp-route-brandId="@item.Id" class="modern-btn modern-btn-sm modern-btn-danger btn-brand-delete">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                        </svg>
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="divCreateUpdateBrand" style="@Edit">
    <div class="modern-card">
        <div class="modern-card-header">
            <h2 class="modern-card-title">@(Convert.ToInt32(ViewData["PagePrimaryID"]) > 0 ? "Edit Brand" : "Create New Brand")</h2>
        </div>
        <form id="brandform" method="post" enctype="multipart/form-data" asp-page-handler="Submit">
        @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
        {
            <input asp-for="objBrand.Id" type="hidden" class="form-control" id="txtBrandID">
            <input asp-for="objBrand.ImageUrl200" type="hidden" class="form-control" id="txtImageUrl200">
            <input asp-for="objBrand.ImageUrl500" type="hidden" class="form-control" id="txtImageUrl500">
            <input asp-for="objBrand.IsDelete" type="hidden" class="form-control" id="txtIsDelete">
            <input asp-for="objBrand.Createdby" type="hidden" class="form-control" id="txtCreatedby">
            <input asp-for="objBrand.CreatedDate" type="hidden" class="form-control" id="txtCreatedDate">
            <input asp-for="objBrand.Modifiedby" type="hidden" class="form-control" id="txtModifiedby">
            <input asp-for="objBrand.ModifiedDate" type="hidden" class="form-control" id="txtModifiedDate">
        }

            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtBrand" class="modern-form-label">Brand Name *</label>
                        <input asp-for="objBrand.Name" type="text" class="modern-form-input" id="txtBrand" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Status</label>
                        <div class="modern-toggle-container">
                            <input asp-for="objBrand.IsActive" type="checkbox" id="txtIsActive" class="modern-checkbox">
                            <label for="txtIsActive" class="modern-toggle-label">
                                <div class="toggle-switch">
                                    <div class="toggle-slider"></div>
                                    <span class="toggle-text-off">Inactive</span>
                                    <span class="toggle-text-on">Active</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtDescription" class="modern-form-label">Description</label>
                        <textarea asp-for="objBrand.Description" class="modern-form-input" id="txtDescription" rows="3"></textarea>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Brand Image</label>
                        <div class="file-upload-container">
                            <div class="file-upload-area" onclick="document.getElementById('fileUpload').click()">
                                <div class="upload-icon">
                                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                        <polyline points="17,8 12,3 7,8"></polyline>
                                        <line x1="12" y1="3" x2="12" y2="15"></line>
                                    </svg>
                                </div>
                                <div class="upload-text">
                                    <span class="upload-title">Click to upload image</span>
                                    <span class="upload-subtitle">or drag and drop</span>
                                </div>
                                <div class="upload-formats">PNG, JPG, GIF up to 10MB</div>
                            </div>
                            <input type="file" id="fileUpload" class="fileUpload-hidden d-none" asp-for="Upload" accept="image/*" onchange="fileValidation()">
                            @if (imagePath != "")
                            {
                                <div class="image-preview-container">
                                    <img src="@imagePath" id="imgPath" alt="Brand Image" class="preview-image" />
                                    <div class="image-overlay">
                                        <button type="button" class="change-image-btn" onclick="document.getElementById('fileUpload').click()">
                                            Change Image
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-12">
                    <div class="modern-form-actions">
                        <button type="submit" class="modern-btn modern-btn-primary brand-submit">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            @(Convert.ToInt32(ViewData["PagePrimaryID"]) > 0 ? "Update Brand" : "Create Brand")
                        </button>
                        @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
                        {
                            <a asp-page-handler="Reset" asp-route-brandId=@Convert.ToInt32(ViewData["PagePrimaryID"]) class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
                                </svg>
                                Reset
                            </a>
                        }
                        else
                        {
                            <a asp-page-handler="Clear" class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                Clear
                            </a>
                        }
                        <a asp-page="/Brand" class="modern-btn modern-btn-secondary">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            Close
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@if (ViewData["SuccessMsg"] != null && ViewData["SuccessMsg"] != "")
{
    <script src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#success-alert").show();
            $("#success-alert").fadeTo(2000, 3000).slideUp(3000, function () {
                $("#success-alert").slideUp(3000);
            });
        });
    </script>
}

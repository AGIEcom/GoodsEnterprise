@page "/all-supplier"
@model GoodsEnterprise.Web.Pages.SupplierModel

@{ ViewData["Title"] = "Supplier";
                var Edit = "";
                var List = "";

                if (Convert.ToString(ViewData["PageType"]) == "Edit")
                {
                    Edit = "display:block;";
                    List = "display:none;";
                }
                else
                {
                    Edit = "display:none;";
                    List = "display:block;";
                } }

@Html.AntiForgeryToken()
<input type="hidden" id="SupplierTypehtn" value="@ViewData["PageType"]" />

<style>

@page "/all-role"
@model GoodsEnterprise.Web.Pages.RoleModel

@{
    ViewData["Title"] = "Role";
    var Edit = "";
    var List = "";

    if (Convert.ToString(ViewData["PageType"]) == "Edit")
    {
        Edit = "display:block;";
        List = "display:none;";
    }
    else
    {
        Edit = "display:none;";
        List = "display:block;";
    }
}

<div class="modern-alert modern-alert-success" id="success-alert" style="display:none;">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
    <span>@ViewData["SuccessMsg"]</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div id="rolelist" style="@List">
    <div class="modern-card">
        <div class="d-flex justify-content-end mb-3">
            <a id="lnkCreateRole" class="modern-btn modern-btn-primary">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>
        <div class="modern-table-container">
            <table class="modern-table" id="tblRoleMaster">
                <thead>
                    <tr>
                        <th scope="col">Role Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstrole)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <span class="modern-badge @(item.IsActive ? "modern-badge-success" : "modern-badge-secondary")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="modern-btn-group">
                                    <a asp-page-handler="Edit" asp-route-roleId="@item.Id" class="modern-btn modern-btn-sm modern-btn-primary">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                        </svg>
                                    </a>
                                    <a asp-page-handler="DeleteRole" asp-route-roleId="@item.Id" class="modern-btn modern-btn-sm modern-btn-danger btn-role-delete">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<div id="divCreateUpdateRole" style="@Edit">
    <div class="modern-card">
        <form method="post" enctype="multipart/form-data" asp-page-handler="Submit">
            @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
            {
                <input asp-for="objRole.Id" type="hidden" class="form-control" id="txtRoleID">
                <input asp-for="objRole.IsDelete" type="hidden" class="form-control" id="txtIsDelete">
                <input asp-for="objRole.Createdby" type="hidden" class="form-control" id="txtCreatedby">
                <input asp-for="objRole.CreatedDate" type="hidden" class="form-control" id="txtCreatedDate">
                <input asp-for="objRole.Modifiedby" type="hidden" class="form-control" id="txtModifiedby">
                <input asp-for="objRole.ModifiedDate" type="hidden" class="form-control" id="txtModifiedDate">
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="modern-form-group">
                        <label for="txtRole" class="modern-form-label">Role Name *</label>
                        <input asp-for="objRole.Name" type="text" class="modern-form-input" id="txtRole" required>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Status</label>
                        <div class="modern-toggle-container">
                            <input asp-for="objRole.IsActive" type="checkbox" id="txtIsActive" class="modern-checkbox">
                            <label for="txtIsActive" class="modern-toggle-label">
                                <div class="toggle-switch">
                                    <div class="toggle-slider"></div>
                                    <span class="toggle-text-off">Inactive</span>
                                    <span class="toggle-text-on">Active</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="modern-form-actions d-flex justify-content-end gap-2">
                        <button type="submit" class="modern-btn modern-btn-primary role-submit">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            @(Convert.ToInt32(ViewData["PagePrimaryID"]) > 0 ? "Update Role" : "Create Role")
                        </button>
                        @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
                        {
                            <a asp-page-handler="Reset" asp-route-roleId=@Convert.ToInt32(ViewData["PagePrimaryID"]) class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
                                </svg>
                                Reset
                            </a>
                        }
                        else
                        {
                            <a asp-page-handler="Clear" class="modern-btn modern-btn-secondary">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                </svg>
                                Clear
                            </a>
                        }
                        <a asp-page="/Role" class="modern-btn modern-btn-secondary">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                            Close
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@* Include Modern Alert System *@
@await Html.PartialAsync("_ModernAlerts")

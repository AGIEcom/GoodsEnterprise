@page "/all-customer"
@model GoodsEnterprise.Web.Pages.CustomerModel

@{
    ViewData["Title"] = "Customer";
    var Edit = "";
    var List = "";

    if (Convert.ToString(ViewData["PageType"]) == "Edit")
    {
        Edit = "display:block;";
        List = "display:none;";
    }
    else
    {
        Edit = "display:none;";
        List = "display:block;";
    }
}

<link href="/css/common.css" rel="stylesheet" asp-append-version="true" />

<style>
    /* DataTables styling - exactly like Tax page */
    .dataTables_length select,
    .dataTables_filter input {
        background-color: #fff;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        padding: 0.375rem 0.75rem;
        font-size: 14px;
        color: #374151;
        transition: all 0.2s ease;
    }

    .dataTables_length select:hover,
    .dataTables_filter input:hover {
        border-color: #9ca3af;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .dataTables_length select:focus,
    .dataTables_filter input:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }

        .d-flex.align-items-center.gap-3 {
            flex-wrap: wrap;
            justify-content: center;
        }

        .dataTables_filter input {
            width: 150px;
        }
    }

    /* Pagination styling */
    #tblCustomerMaster_wrapper .dataTables_paginate {
        margin: 0 !important;
        display: flex !important;
        justify-content: flex-end !important;
        align-items: center !important;
        flex-wrap: wrap !important;
    }

    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button {
        background: #fff !important;
        border: 1px solid #d1d5db !important;
        border-radius: 6px !important;
        padding: 0 !important;
        margin: 0 2px !important;
        font-size: 14px !important;
        color: #374151 !important;
        cursor: pointer !important;
        transition: all 0.2s ease !important;
        text-decoration: none !important;
        display: inline-flex !important;
        align-items: center !important;
        justify-content: center !important;
        min-width: 36px !important;
        height: 36px !important;
    }

    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button:hover {
        background: #f3f4f6 !important;
        border-color: #9ca3af !important;
        color: #111827 !important;
        transform: translateY(-1px) !important;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1) !important;
    }

    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.current,
    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.current:hover {
        background: #3b82f6 !important;
        border-color: #3b82f6 !important;
        color: #fff !important;
        font-weight: 600 !important;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3) !important;
    }

    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.disabled,
    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.disabled:hover {
        background: #f9fafb !important;
        border-color: #e5e7eb !important;
        color: #9ca3af !important;
        cursor: not-allowed !important;
        opacity: 0.6 !important;
    }

    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.previous,
    #tblCustomerMaster_wrapper .dataTables_paginate .paginate_button.next {
        font-weight: 500 !important;
    }

    /* Info styling */
    #tblCustomerMaster_wrapper .dataTables_info {
        margin-top: 1rem;
        font-size: 14px;
        color: #6b7280;
        text-align: left;
    }

    /* Table wrapper to fit window */
    .modern-table-container {
        width: 100%;
        overflow-x: auto;
        margin-bottom: 0;
        margin-top: 0;
        padding-top: 0;
        height: calc(100vh - 200px);
    }

    .modern-table {
        width: 100% !important;
        table-layout: auto;
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    /* Remove top spacing from table wrapper and DataTable elements */
    #tblCustomerMaster_wrapper {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    #tblCustomerMaster {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }

    /* Ensure pagination row is visible */
    #tblCustomerMaster_wrapper .row {
        margin: 1rem 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    #tblCustomerMaster_wrapper .row .col-md-5 {
        flex: 0 0 auto;
    }

    #tblCustomerMaster_wrapper .row .col-md-7 {
        flex: 1;
        display: flex;
        justify-content: flex-end;
    }

    /* Responsive table adjustments */
    @@media (max-width: 768px) {
        #tblCustomerMaster_wrapper .row {
            flex-direction: column;
            gap: 1rem;
        }

        #tblCustomerMaster_wrapper .row .col-md-7 {
            justify-content: center;
        }

        .modern-table-container {
            font-size: 14px;
        }
    }

    /* Column alignment and sizing - Customer table has 6 columns */
    #tblCustomerMaster th:nth-child(4),
    #tblCustomerMaster td:nth-child(4) {
        text-align: center !important;
    }

    #tblCustomerMaster th:nth-child(5),
    #tblCustomerMaster td:nth-child(5) {
        text-align: center !important;
    }

    #tblCustomerMaster th:nth-child(6),
    #tblCustomerMaster td:nth-child(6) {
        text-align: center !important;
    }

    /* Column width adjustments for 6 columns */
    #tblCustomerMaster th:nth-child(1),
    #tblCustomerMaster td:nth-child(1) {
        width: 15%;
        min-width: 100px;
    }

    #tblCustomerMaster th:nth-child(2),
    #tblCustomerMaster td:nth-child(2) {
        width: 15%;
        min-width: 100px;
    }

    #tblCustomerMaster th:nth-child(3),
    #tblCustomerMaster td:nth-child(3) {
        width: 25%;
        min-width: 150px;
    }

    #tblCustomerMaster th:nth-child(4),
    #tblCustomerMaster td:nth-child(4) {
        width: 15%;
        min-width: 80px;
    }

    #tblCustomerMaster th:nth-child(5),
    #tblCustomerMaster td:nth-child(5) {
        width: 15%;
        min-width: 80px;
    }

    #tblCustomerMaster th:nth-child(6),
    #tblCustomerMaster td:nth-child(6) {
        width: 15%;
        min-width: 100px;
        text-align: center !important;
    }

    /* No text wrapping for all columns */
    #tblCustomerMaster th,
    #tblCustomerMaster td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Center align action buttons */
    #tblCustomerMaster .modern-btn-group {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.25rem;
    }

    /* Force center alignment for status badges */
    #tblCustomerMaster td:nth-child(4) .modern-badge,
    #tblCustomerMaster td:nth-child(5) .modern-badge {
        display: inline-block;
        margin: 0 auto;
    }

    /* Ensure status cell content is centered */
    #tblCustomerMaster td:nth-child(4),
    #tblCustomerMaster td:nth-child(5) {
        text-align: center !important;
        vertical-align: middle !important;
    }

    /* Override any inherited alignment */
    #tblCustomerMaster th:nth-child(4),
    #tblCustomerMaster th:nth-child(5) {
        text-align: center !important;
    }
</style>

<div class="modern-alert modern-alert-success" id="success-alert" style="display:none;">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
    </svg>
    <span>@ViewData["SuccessMsg"]</span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<input type="hidden" id="hdnCustomerID" value="@ViewData["PagePrimaryID"]" />
<div id="customerlist" style="@List">
    <div class="modern-card">
        <!-- Header section with all controls in same horizontal line -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-3">
            <div class="d-flex align-items-center flex-wrap" style="gap: 3rem;">
                <!-- Search input - moved to first position -->
                <div class="dataTables_filter" id="tblCustomerMaster_filter">
                    <label class="d-flex align-items-center gap-2">
                        <span>Search:</span>

                        <div class="search-input-group">
                            <input type="search" class="modern-search-input" placeholder="🔍 Search Customers..." id="customerSearchInput">
                            <button type="button" class="search-clear-btn" id="clearCustomerSearch" title="Clear search">
                                <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                                </svg>
                            </button>
                        </div>

                        @* <input type="search" class="modern-search-input" placeholder="Type to search customers..." aria-controls="tblCustomerMaster" style="width: 200px;" id="customerSearchInput"> *@
                    </label>
                </div>
                
                <!-- Show entries dropdown - moved to second position -->
                <div class="dataTables_length" id="tblCustomerMaster_length">
                    <label class="d-flex align-items-center gap-2">
                        <span>Show</span>
                        <select name="tblCustomerMaster_length" aria-controls="tblCustomerMaster" class="modern-form-input" style="width: auto; padding: 0.375rem 0.75rem;" id="customerLengthSelect">
                            <option value="5">5</option>
                            <option value="10" selected>10</option>
                            <option value="20">20</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <span>entries</span>
                    </label>
                </div>
            </div>
            
            <!-- Create button with only icon -->
            <a asp-page-handler="Create" id="lnkCreateCustomer" class="modern-btn modern-btn-primary" title="Create Customer">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>
        <div class="modern-table-container">
            <table class="modern-table" id="tblCustomerMaster">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Status</th>
                        <th scope="col">Subscribed</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstcustomer)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>
                                <span class="modern-badge @(item.IsActive ? "modern-badge-success" : "modern-badge-secondary")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <span class="modern-badge @(item.EmailSubscribed ? "modern-badge-info" : "modern-badge-secondary")">
                                    @(item.EmailSubscribed ? "Subscribed" : "Not Subscribed")
                                </span>
                            </td>
                            <td>
                                <div class="modern-btn-group">
                                    <a asp-page-handler="Edit" asp-route-customerId="@item.Id" class="modern-btn modern-btn-sm modern-btn-primary" title="Edit Customer">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                        </svg>
                                    </a>
                                    <a asp-page-handler="DeleteCustomer" asp-route-customerId="@item.Id" class="modern-btn modern-btn-sm modern-btn-danger btn-customer-delete" title="Delete Customer">
                                        <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" clip-rule="evenodd"></path>
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                        </svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div id="divCreateUpdateCustomer" style="@Edit">
    <div class="modern-card">
        <form method="post" enctype="multipart/form-data" asp-page-handler="Submit">
        @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
        {
            <input asp-for="objCustomer.Id" type="hidden" class="form-control" id="txtCustomerID">
            <input asp-for="objCustomer.IsDelete" type="hidden" class="form-control" id="txtIsDelete">
            <input asp-for="objCustomer.Createdby" type="hidden" class="form-control" id="txtCreatedby">
            <input asp-for="objCustomer.CreatedDate" type="hidden" class="form-control" id="txtCreatedDate">
            <input asp-for="objCustomer.Modifiedby" type="hidden" class="form-control" id="txtModifiedby">
            <input asp-for="objCustomer.ModifiedDate" type="hidden" class="form-control" id="txtModifiedDate">
        }

            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtCustomerFirstName" class="modern-form-label">First Name *</label>
                        <input asp-for="objCustomer.FirstName" type="text" class="modern-form-input" id="txtCustomerFirstName" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtCustomerLastName" class="modern-form-label">Last Name *</label>
                        <input asp-for="objCustomer.LastName" type="text" class="modern-form-input" id="txtCustomerLastName" required>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtAddress1" class="modern-form-label">Address Line 1</label>
                        <input asp-for="objCustomer.Address1" type="text" class="modern-form-input" id="txtAddress1">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtAddress2" class="modern-form-label">Address Line 2</label>
                        <input asp-for="objCustomer.Address2" type="text" class="modern-form-input" id="txtAddress2">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtCity" class="modern-form-label">City</label>
                        <input asp-for="objCustomer.City" type="text" class="modern-form-input" id="txtCity">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtCounty" class="modern-form-label">County</label>
                        <input asp-for="objCustomer.County" type="text" class="modern-form-input" id="txtCounty">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtPostalCode" class="modern-form-label">Postal Code</label>
                        <input asp-for="objCustomer.PostalCode" type="number" onkeypress="return event.charCode >= 48" min="0" class="modern-form-input" id="txtPostalCode">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtCountry" class="modern-form-label">Country</label>
                        <input asp-for="objCustomer.Country" type="text" class="modern-form-input" id="txtCountry">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="selectRole" class="modern-form-label">Role</label>
                      
                        <select asp-for="objCustomer.RoleId" class="modern-select"
                                asp-items="Model.Roles" id="selectRole" required>
                            <option value="0">-- Select Role --</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtMobilePhone" class="modern-form-label">Mobile Phone</label>
                        <input asp-for="objCustomer.MobilePhone" type="tel" class="modern-form-input" id="txtMobilePhone">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtHomePhone" class="modern-form-label">Home Phone</label>
                        <input asp-for="objCustomer.HomePhone" type="tel" class="modern-form-input" id="txtHomePhone">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtCustomerEmail" class="modern-form-label">Email *</label>
                        <input asp-for="objCustomer.Email" type="email" class="modern-form-input" id="txtCustomerEmail" required>
                    </div>
                </div>
            </div>
            
            @if (Convert.ToInt32(ViewData["PagePrimaryID"]) > 0)
            {
                <!-- Edit Mode - Optional Password Change -->
                <div class="modern-form-group">
                    <label class="modern-form-label">Change Password</label>
                    <div class="modern-toggle-container">
                        <input type="checkbox" id="chkChangeCustomerPassword" class="modern-checkbox">
                        <label for="chkChangeCustomerPassword" class="modern-toggle-label">
                            <div class="toggle-switch">
                                <div class="toggle-slider"></div>
                                <span class="toggle-text-off">Keep Current</span>
                                <span class="toggle-text-on">Change Password</span>
                            </div>
                        </label>
                    </div>
                </div>
                <div id="customerPasswordChangeSection" style="display: none;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="txtCustomerPassword" class="modern-form-label">New Password *</label>
                                <input asp-for="objCustomer.Password" type="password" class="modern-form-input" id="txtCustomerPassword" minlength="6">
                                <div class="password-strength-indicator" id="customerPasswordStrength"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="modern-form-group">
                                <label for="txtCustomerConfirmPassword" class="modern-form-label">Confirm New Password *</label>
                                <input type="password" class="modern-form-input" id="txtCustomerConfirmPassword" minlength="6">
                                <div class="password-match-indicator" id="customerPasswordMatch"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Create Mode - Required Password -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="modern-form-group">
                            <label for="txtCustomerPassword" class="modern-form-label">Password *</label>
                            <input asp-for="objCustomer.Password" type="password" class="modern-form-input" id="txtCustomerPassword" required minlength="6">
                            <div class="password-strength-indicator" id="customerPasswordStrength"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="modern-form-group">
                            <label for="txtCustomerConfirmPassword" class="modern-form-label">Confirm Password *</label>
                            <input type="password" class="modern-form-input" id="txtCustomerConfirmPassword" required minlength="6">
                            <div class="password-match-indicator" id="customerPasswordMatch"></div>
                        </div>
                    </div>
                </div>
            }
            
            <div class="row">
                <div class="col-md-12">
                    <div class="modern-form-group">
                        <label for="txtDescription" class="modern-form-label">Description</label>
                        <textarea asp-for="objCustomer.Description" class="modern-form-input" id="txtDescription" rows="3"></textarea>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Account Status</label>
                        <div class="modern-toggle-container">
                            <input asp-for="objCustomer.IsActive" type="checkbox" id="txtIsActive" class="modern-checkbox">
                            <label for="txtIsActive" class="modern-toggle-label">
                                <div class="toggle-switch">
                                    <div class="toggle-slider"></div>
                                    <span class="toggle-text-off">Inactive</span>
                                    <span class="toggle-text-on">Active</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label class="modern-form-label">Email Subscription</label>
                        <div class="modern-toggle-container">
                            <input asp-for="objCustomer.EmailSubscribed" type="checkbox" id="txtEmailSubscribed" class="modern-checkbox">
                            <label for="txtEmailSubscribed" class="modern-toggle-label">
                                <div class="toggle-switch">
                                    <div class="toggle-slider"></div>
                                    <span class="toggle-text-off">Unsubscribed</span>
                                    <span class="toggle-text-on">Subscribed</span>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <h4 class="modern-section-title">Company Information</h4>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtCompanyName" class="modern-form-label">Company Name</label>
                        <input asp-for="objCustomer.CompanyName" type="text" class="modern-form-input" id="txtCompanyName">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="modern-form-group">
                        <label for="txtContactPerson" class="modern-form-label">Contact Person</label>
                        <input asp-for="objCustomer.ContactPerson" type="text" class="modern-form-input" id="txtContactPerson">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtCompanyEmail" class="modern-form-label">Company Email</label>
                        <input asp-for="objCustomer.CompanyEmail" type="email" class="modern-form-input" id="txtCompanyEmail">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtCompanyPhone" class="modern-form-label">Company Phone</label>
                        <input asp-for="objCustomer.CompanyPhone" type="tel" class="modern-form-input" id="txtCompanyPhone">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="modern-form-group">
                        <label for="txtCompanyFax" class="modern-form-label">Company Fax</label>
                        <input asp-for="objCustomer.CompanyFax" type="tel" class="modern-form-input" id="txtCompanyFax">
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-12">

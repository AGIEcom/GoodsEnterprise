@page "/Login"
@model GoodsEnterprise.Web.Pages.LoginModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Redneval</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/modern-components.css" rel="stylesheet" />
    <style>
        body {
            background: #ffffff;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
            margin: 2rem;
        }
        .login-header {
            background: linear-gradient(135deg, #3182ce, #2c5282);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .login-form {
            padding: 2rem;
        }
        .brand-logo {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .brand-subtitle {
            opacity: 0.9;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

@* Include Modern Alert System *@
@await Html.PartialAsync("_ModernAlerts")

<div class="login-container">
    <div class="login-header">
        <div class="brand-logo">
            <svg width="32" height="32" fill="currentColor" viewBox="0 0 20 20" style="margin-right: 0.5rem;">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 6a2 2 0 114 0 2 2 0 01-4 0zm8-1a1 1 0 100 2h2a1 1 0 100-2h-2z" clip-rule="evenodd"></path>
            </svg>
            Redneval
        </div>
        <p class="brand-subtitle">Welcome back! Please sign in to your account.</p>
    </div>
    
    <div class="login-form">
        <form method="post" enctype="multipart/form-data" asp-page-handler="Login">
            <div class="modern-form-group">
                <label for="email" class="modern-form-label">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20" style="margin-right: 0.5rem;">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                    Email Address
                </label>
                <input type="email" id="email" class="modern-form-input" placeholder="Enter your email" asp-for="objAdmin.Email" required>
            </div>
            
            <div class="modern-form-group">
                <label for="password" class="modern-form-label">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20" style="margin-right: 0.5rem;">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                    </svg>
                    Password
                </label>
                <input type="password" id="password" class="modern-form-input" placeholder="Enter your password" asp-for="objAdmin.Password" required>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                @* <div class="modern-form-group mb-0">
                    <input type="checkbox" id="remember" class="modern-checkbox" asp-for="RememberMe">
                    <label for="remember" class="modern-checkbox-label">Remember me</label>
                </div> *@
                <button type="submit" class="modern-btn modern-btn-primary" style="width: auto; padding: 0.5rem 1.5rem;">
                    Sign In
                </button>
            </div>
            
            <div class="text-center mt-3">
                <a href="#" class="text-primary" data-toggle="modal" data-target="#forgotPasswordModal">
                    Forgot your password?
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="forgotPasswordModalLabel">Reset Your Password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="forgotPasswordForm" method="post" asp-page-handler="ForgotPassword">
                <div class="modal-body">
                    <div class="modern-form-group">
                        <label for="forgotEmail" class="modern-form-label">
                            <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20" style="margin-right: 0.5rem;">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                            </svg>
                            Email Address
                        </label>
                        <input type="email" id="forgotEmail" name="email" class="modern-form-input" placeholder="Enter your email address" required>
                    </div>
                    <div id="forgotPasswordMessage" class="mt-2" style="display: none;"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="modern-btn modern-btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="modern-btn modern-btn-primary">Send Reset Link</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="~/js/modern-interactions.js" asp-append-version="true"></script>

<script>
    $(document).ready(function() {
        $('#forgotPasswordForm').on('submit', function(e) {
            e.preventDefault();
            const email = $('#forgotEmail').val();
            const messageDiv = $('#forgotPasswordMessage');
            
            // Show loading state
            messageDiv.removeClass('text-danger text-success')
                .addClass('text-muted')
                .html('Sending reset link...')
                .show();

            // Submit form via AJAX
            $.ajax({
                url: '/Login?handler=ForgotPassword',
                type: 'POST',
                data: $(this).serialize(),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        messageDiv.removeClass('text-muted text-danger')
                            .addClass('text-success')
                            .html('Password reset link has been sent to your email.');
                        
                        // Clear the form and hide the modal after 3 seconds
                        setTimeout(function() {
                            $('#forgotEmail').val('');
                            $('#forgotPasswordModal').modal('hide');
                            messageDiv.hide();
                        }, 3000);
                    } else {
                        messageDiv.removeClass('text-muted text-success')
                            .addClass('text-danger')
                            .html(response.message || 'An error occurred. Please try again.');
                    }
                },
                error: function() {
                    messageDiv.removeClass('text-muted text-success')
                        .addClass('text-danger')
                        .html('An error occurred. Please try again.');
                }
            });
        });

        // Reset the form when modal is closed
        $('#forgotPasswordModal').on('hidden.bs.modal', function () {
            $('#forgotPasswordForm')[0].reset();
            $('#forgotPasswordMessage').hide();
        });

        // Fix modal backdrop issue
        $('#forgotPasswordModal').on('show.bs.modal', function (e) {
            // Ensure backdrop is properly created
            if (!$('.modal-backdrop').length) {
                $('body').append('<div class="modal-backdrop fade show"></div>');
            }
            $('body').addClass('modal-open');
        });

        $('#forgotPasswordModal').on('hidden.bs.modal', function (e) {
            // Clean up backdrop
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open');
        });

        // Handle click outside modal to close
        $(document).on('click', '.modal-backdrop', function() {
            $('#forgotPasswordModal').modal('hide');
        });
    });
</script>
</body>
</html>
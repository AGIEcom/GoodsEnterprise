{
  "ImportColumns": {
    "title": "Base Cost Import Configuration",
    "description": "Excel column configuration for base cost data import",
    "columns": [
    
      {
        "name": "BaseCost",
        "displayName": "Base Cost",
        "type": "decimal",
        "required": true,
        "min": 0.01,
        "precision": 2,
        "description": "Base cost amount (Required)"
      },
      {
        "name": "StartDate",
        "displayName": "Start Date",
        "type": "date",
        "required": true,
        "format": "MM/DD/YYYY or YYYY-MM-DD",
        "description": "Cost effective start date (Required)"
      },
      {
        "name": "ProductName",
        "displayName": "Product Name",
        "type": "string",
        "required": false,
        "maxLength": 200,
        "description": "Product name for reference"
      },
      {
        "name": "EndDate",
        "displayName": "End Date",
        "type": "date",
        "required": false,
        "format": "MM/DD/YYYY or YYYY-MM-DD",
        "description": "Cost effective end date"
      },
      {
        "name": "Remark",
        "displayName": "Remark",
        "type": "string",
        "required": false,
        "maxLength": 500,
        "description": "Additional remarks or notes"
      },
      {
        "name": "SupplierName",
        "displayName": "Supplier Name",
        "type": "string",
        "required": true,
        "maxLength": 100,
        "description": "Supplier name"
      },
      {
        "name": "IsActive",
        "displayName": "Is Active",
        "type": "boolean",
        "required": false,
        "defaultValue": true,
        "acceptedValues": [ "true", "false", "1", "0", "yes", "no", "active", "inactive" ],
        "description": "Cost record active status (Default: Active)"
      }
    ],
    "importSettings": {
      "maxFileSize": "50MB",
      "supportedFormats": [ ".xlsx", ".xls" ],
      "maxRows": 10000,
      "validateData": true,
      "skipEmptyRows": true,
      "trimWhitespace": true
    },
    "validationRules": {
      "duplicateCheck": {
        "enabled": true,
        "checkFields": [ "ProductCode", "StartDate" ],
        "action": "reject"
      },
      "requiredFieldValidation": {
        "enabled": true,
        "action": "reject"
      },
      "dataTypeValidation": {
        "enabled": true,
        "action": "warn"
      },
      "lengthValidation": {
        "enabled": true,
        "action": "reject"
      }
    }
  },
  "ColumnMappings": { 
    "Product Name": "ProductName",
    "Base Cost": "BaseCost",
    "Cost": "BaseCost",
    "Start Date": "StartDate",
    "From Date": "StartDate",
    "End Date": "EndDate",
    "To Date": "EndDate",
    "Remark": "Remark",
    "Comments": "Remark",
    "Supplier Name": "SupplierName",
    "Supplier": "SupplierName",
    "Active": "IsActive",
    "Is Active": "IsActive"
  }
}
